{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM" ,"ES6"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/**/*" 
  ],
  "exclude": ["node_modules", "test/**/*"]
}
